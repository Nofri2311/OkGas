<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_order"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detail_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_service"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_order" />

        <TextView
            android:id="@+id/detail_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_name"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_service" />

        <TextView
            android:id="@+id/detail_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_date"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_order_name" />

        <TextView
            android:id="@+id/detail_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_status"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_order_date" />

        <TextView
            android:id="@+id/detail_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_price"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_order_status" />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/order_name"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_order_name"
            app:layout_constraintBottom_toBottomOf="@+id/detail_order_name" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/order_date"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_order_date"
            app:layout_constraintBottom_toBottomOf="@+id/detail_order_date" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/order_status"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_order_status"
            app:layout_constraintBottom_toBottomOf="@+id/detail_order_status" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/order_status"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_order_price"
            app:layout_constraintBottom_toBottomOf="@+id/detail_order_price" />

        <TextView
            android:id="@+id/detail_partner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_partner"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/order_price" />

        <TextView
            android:id="@+id/detail_partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partner_name"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_partner" />

        <TextView
            android:id="@+id/detail_partner_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/partner_number"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detail_partner_name" />

        <TextView
            android:id="@+id/partner_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/partner_name"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_partner_name"
            app:layout_constraintBottom_toBottomOf="@+id/detail_partner_name" />

        <TextView
            android:id="@+id/partner_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/partner_number"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detail_partner_date"
            app:layout_constraintBottom_toBottomOf="@+id/detail_partner_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
